<header class="hero card border-0 shadow-lg text-white mb-4 bg-primary">
  <div class="card-body p-4 p-lg-5">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-center gap-3">
      <div class="text-center text-lg-start">
        <h1 class="hero__title fw-bold mb-2">Mantenimientos Preventivos</h1>
        <p class="hero__subtitle mb-0 opacity-75 fs-5">Registro de instalaciones y mantenimientos de piezas</p>
      </div>
      <div class="d-flex flex-wrap justify-content-center gap-2 hero__meta text-nowrap">
        <a href="/inventario" class="btn btn-outline-light px-3">
          <i class="bi bi-box-seam me-1"></i>Inventario
        </a>
        <a href="/reportes/mantenimientos?{{#if estadoFiltro}}estado={{estadoFiltro}}{{/if}}" 
           class="btn btn-danger px-3" target="_blank">
          <i class="bi bi-file-pdf me-1"></i>Exportar PDF
        </a>
      </div>
    </div>
  </div>
</header>

<section class="panel card border-0 shadow-sm mb-4">
  <div class="card-body">
    <div class="row g-3 mb-3">
      <div class="col-12 col-md-4">
        <label class="form-label fw-semibold text-primary">Buscar por Referencia</label>
        <input id="buscador-referencia" type="search" class="form-control form-control-lg" placeholder="Referencia..."
          autocomplete="off" value="{{referenciaFiltro}}">
      </div>
      <div class="col-12 col-md-4">
        <label class="form-label fw-semibold text-primary">Buscar por Equipo</label>
        <select id="filtro-equipo" class="form-select form-select-lg">
          <option value="">Todos los equipos</option>
          {{#each equipos}}
          <option value="{{this}}" {{#if (eq ../equipoFiltro this)}}selected{{/if}}>{{this}}</option>
          {{/each}}
        </select>
      </div>
      <div class="col-12 col-md-4">
        <label class="form-label fw-semibold text-primary">Estado</label>
        <select id="filtro-estado" class="form-select form-select-lg">
          <option value="todos" {{#if (eq estadoFiltro 'todos' )}}selected{{/if}}>Todos</option>
          <option value="activo" {{#if (eq estadoFiltro 'activo' )}}selected{{/if}}>Activos</option>
          <option value="completado" {{#if (eq estadoFiltro 'completado' )}}selected{{/if}}>Completados</option>
          <option value="cancelado" {{#if (eq estadoFiltro 'cancelado' )}}selected{{/if}}>Cancelados</option>
        </select>
      </div>
    </div>
  </div>
</section>

<div class="d-flex justify-content-end mb-4">
  <button type="button" class="btn btn-primary btn-lg shadow-sm" data-bs-toggle="modal"
    data-bs-target="#modalMantenimiento">
    <i class="bi bi-plus-circle me-2"></i>Nuevo Mantenimiento
  </button>
</div>

<section class="panel card border-0 shadow-sm mb-4">
  <div class="card-body">
    <h2 class="panel-title mb-4">Historial de Mantenimientos ({{totalMaintenances}})</h2>
    <div class="table-responsive">
      <table id="tabla-mantenimientos" class="table table-hover mb-0">
        <thead class="table-primary">
          <tr>
            <th>Referencia</th>
            <th>Máquina/Producto</th>
            <th>Tipo</th>
            <th>Equipo</th>
            <th>Repuestos</th>
            <th>Fecha Instalación</th>
            <th>Fecha Vencimiento</th>
            <th>Técnico</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#if maintenances}}
          {{#if (gt maintenances.length 0)}}
          {{#each maintenances}}
          <tr
            class="{{#if (eq this.estado 'activo')}}table-success{{else if (eq this.estado 'completado')}}table-secondary{{else}}table-danger{{/if}}">
            <td class="fw-semibold">{{this.referencia}}</td>
            <td>
              {{#if this.maquina}}
              <div>
                <i class="bi bi-gear me-1 text-primary"></i>
                <strong>{{this.maquina.nombre}}</strong>
                <br>
                <small class="text-muted">{{this.maquina.codigo}}</small>
              </div>
              {{else if this.producto}}
              <div>
                <i class="bi bi-box me-1 text-success"></i>
                {{this.producto.nombre}}
              </div>
              {{else}}
              <span class="text-muted">-</span>
              {{/if}}
            </td>
            <td class="text-capitalize">{{this.tipo}}</td>
            <td>{{this.equipo}}</td>
            <td>
              {{#if this.repuestosUtilizados}}
              {{#if (gt this.repuestosUtilizados.length 0)}}
              <span class="badge bg-info" title="{{#each this.repuestosUtilizados}}{{#if this.producto}}{{this.producto.referencia}} ({{this.cantidad}}){{/if}}{{#unless @last}}, {{/unless}}{{/each}}">
                {{this.repuestosUtilizados.length}} repuesto(s)
              </span>
              {{else}}
              <span class="text-muted">-</span>
              {{/if}}
              {{else}}
              <span class="text-muted">-</span>
              {{/if}}
            </td>
            <td>{{formatDate this.fechaInstalacion}}</td>
            <td>
              {{#if this.fechaVencimiento}}
              {{formatDate this.fechaVencimiento}}
              {{else}}
              <span class="text-muted">-</span>
              {{/if}}
            </td>
            <td>
              {{#if this.tecnico}}
                <div class="d-flex align-items-center">
                  <i class="bi bi-person-wrench me-2 text-primary"></i>
                  <div>
                    <div class="fw-semibold small">{{this.tecnico.nombre}}</div>
                    <small class="text-muted d-none d-md-block">{{this.tecnico.email}}</small>
                  </div>
                </div>
              {{else}}
                <span class="text-muted">-</span>
              {{/if}}
            </td>
            <td>
              <span
                class="badge {{#if (eq this.estado 'activo')}}bg-success{{else if (eq this.estado 'completado')}}bg-secondary{{else}}bg-danger{{/if}} text-capitalize">
                {{this.estado}}
              </span>
            </td>
            <td class="text-end">
              <a href="https://wa.me/?text=⚠️%20Mantenimiento%20Requerido%0A%0AProducto:%20{{this.producto.nombre}}%20({{this.referencia}})%0AEquipo:%20{{this.equipo}}%0AVencimiento:%20{{formatDate this.fechaVencimiento}}%0AEstado:%20{{this.estado}}"
                target="_blank" class="btn btn-sm btn-success me-1" title="Enviar aviso por WhatsApp">
                <i class="bi bi-whatsapp"></i>
              </a>
              {{#if (or (eq ../../usuario.rol 'administrador') (eq ../../usuario.rol 'supervisor'))}}
              <button class="btn btn-sm btn-outline-primary btn-editar-mantenimiento" data-id="{{this._id}}"
                data-producto="{{this.producto._id}}" data-tipo="{{this.tipo}}" data-equipo="{{this.equipo}}"
                data-fecha-instalacion="{{this.fechaInstalacion}}" data-fecha-vencimiento="{{this.fechaVencimiento}}"
                data-horas="{{this.horasVidaUtil}}" data-observaciones="{{this.observaciones}}"
                data-costo="{{this.costo}}" data-estado="{{this.estado}}" title="Editar mantenimiento">
                <i class="bi bi-pencil"></i>
              </button>
              {{/if}}
              {{#if (eq ../../usuario.rol 'administrador')}}
              <button class="btn btn-sm btn-outline-danger btn-eliminar-mantenimiento" data-id="{{this._id}}"
                data-referencia="{{this.referencia}}" 
                data-equipo="{{this.equipo}}" 
                data-producto-nombre="{{#if this.producto}}{{this.producto.nombre}}{{else}}Producto eliminado{{/if}}"
                title="Eliminar mantenimiento">
                <i class="bi bi-trash"></i>
              </button>
              {{/if}}
            </td>
          </tr>
          {{/each}}
          {{else}}
          <tr>
            <td colspan="10" class="text-center text-muted py-4">
              No hay mantenimientos registrados con los filtros seleccionados
            </td>
          </tr>
          {{/if}}
          {{else}}
          <tr>
            <td colspan="10" class="text-center text-muted py-4">No hay mantenimientos registrados</td>
          </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</section>

{{#if (gt totalPaginas 1)}}
<nav aria-label="Paginación de mantenimientos">
  <ul class="pagination justify-content-center">
    {{#if (gt paginaActual 1)}}
    <li class="page-item">
      <a class="page-link"
        href="/mantenimientos?pagina={{subtract paginaActual 1}}{{#if estadoFiltro}}&estado={{estadoFiltro}}{{/if}}{{#if equipoFiltro}}&equipo={{equipoFiltro}}{{/if}}{{#if referenciaFiltro}}&referencia={{referenciaFiltro}}{{/if}}">
        <i class="bi bi-chevron-left"></i>
      </a>
    </li>
    {{else}}
    <li class="page-item disabled">
      <span class="page-link"><i class="bi bi-chevron-left"></i></span>
    </li>
    {{/if}}

    {{#each (generatePaginationPages paginaActual totalPaginas "")}}
    <li class="page-item {{#if this.active}}active{{/if}}">
      <a class="page-link"
        href="/mantenimientos?pagina={{this.numero}}{{#if ../estadoFiltro}}&estado={{../estadoFiltro}}{{/if}}{{#if ../equipoFiltro}}&equipo={{../equipoFiltro}}{{/if}}{{#if ../referenciaFiltro}}&referencia={{../referenciaFiltro}}{{/if}}">{{this.numero}}</a>
    </li>
    {{/each}}

    {{#if (lt paginaActual totalPaginas)}}
    <li class="page-item">
      <a class="page-link"
        href="/mantenimientos?pagina={{add paginaActual 1}}{{#if estadoFiltro}}&estado={{estadoFiltro}}{{/if}}{{#if equipoFiltro}}&equipo={{equipoFiltro}}{{/if}}{{#if referenciaFiltro}}&referencia={{referenciaFiltro}}{{/if}}">
        <i class="bi bi-chevron-right"></i>
      </a>
    </li>
    {{else}}
    <li class="page-item disabled">
      <span class="page-link"><i class="bi bi-chevron-right"></i></span>
    </li>
    {{/if}}
  </ul>
</nav>
{{/if}}

<!-- Modal Registrar Mantenimiento -->
<div class="modal fade" id="modalMantenimiento" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title fw-bold">
          <i class="bi bi-tools me-2"></i>Registrar Mantenimiento
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="text-muted mb-3">Cuando colocas una pieza en un equipo, regístralo aquí. El stock se descontará
          automáticamente.</p>

        <form id="formulario-mantenimiento" autocomplete="off">
          <div class="row g-3 mb-3">
            <div class="col-12 col-md-6">
              <label class="form-label fw-semibold text-primary">Frecuencia de Mantenimiento</label>
              <div class="d-flex gap-3 mt-2">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="tipoFrecuencia" id="frecuencia-horas" value="horas"
                    checked>
                  <label class="form-check-label" for="frecuencia-horas">Por Horas de Uso</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="tipoFrecuencia" id="frecuencia-fecha"
                    value="fecha">
                  <label class="form-check-label" for="frecuencia-fecha">Por Fecha Fija</label>
                </div>
              </div>
            </div>
          </div>

          <div class="row g-3 mb-3">
            <div class="col-12 col-md-6">
              <label class="form-label fw-semibold text-primary">Tipo de Pieza</label>
              <select id="filtro-categoria-producto" class="form-select form-select-lg mb-3">
                <option value="">Todas las categorías</option>
                {{#each tipos}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
              </select>
              <small class="text-muted d-block mb-2">Filtra por tipo: perno, cadena, acople, etc.</small>

              <label class="form-label fw-semibold text-primary">Producto *</label>
              <select id="mantenimiento-producto" name="productoId" class="form-select form-select-lg" required>
                <option value="">Seleccione una pieza del inventario</option>
                {{#each productos}}
                <option value="{{this._id}}" data-referencia="{{this.referencia}}" data-stock="{{this.existencia}}"
                  data-tipo="{{this.tipo}}" data-nombre="{{this.nombre}}">
                  {{this.referencia}} - {{this.nombre}} (Stock: {{this.existencia}}){{#if (eq this.existencia 0)}}
                  ⚠️{{/if}}
                </option>
                {{/each}}
              </select>
              <small class="text-muted">Selecciona una pieza del inventario. Si tiene stock, se descontará
                automáticamente.</small>
            </div>
            <div class="col-12 col-md-6">
              <label class="form-label fw-semibold text-primary">Tipo de Mantenimiento *</label>
              <select id="mantenimiento-tipo" name="tipo" class="form-select form-select-lg" required>
                <option value="preventivo">Preventivo</option>
                <option value="correctivo">Correctivo</option>
                <option value="instalacion">Instalación</option>
              </select>
            </div>
          </div>

          <div class="row g-3 mb-3">
            <div class="col-12 col-md-6">
              <label class="form-label fw-semibold text-primary">Tipo de Registro</label>
              <div class="d-flex gap-3 mt-2 mb-3">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="tipoRegistro" id="tipo-maquina" value="maquina" checked>
                  <label class="form-check-label" for="tipo-maquina">Máquina Registrada</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="tipoRegistro" id="tipo-equipo" value="equipo">
                  <label class="form-check-label" for="tipo-equipo">Equipo Manual</label>
                </div>
              </div>
              
              <div id="selector-maquina" class="mb-3">
                <label class="form-label fw-semibold text-primary">Máquina *</label>
                <select id="mantenimiento-maquina" name="maquinaId" class="form-select form-select-lg">
                  <option value="">Seleccione una máquina</option>
                  {{#each maquinas}}
                  <option value="{{this._id}}" data-codigo="{{this.codigo}}" data-nombre="{{this.nombre}}">
                    {{this.codigo}} - {{this.nombre}}{{#if this.ubicacion}} ({{this.ubicacion}}){{/if}}
                  </option>
                  {{/each}}
                </select>
                <small class="text-muted">Al seleccionar una máquina, podrás agregar sus repuestos automáticamente.</small>
              </div>
              
              <div id="input-equipo" class="mb-3 d-none">
                <label class="form-label fw-semibold text-primary">Máquina/Equipo *</label>
                <input type="text" id="mantenimiento-equipo" name="equipo" class="form-control form-control-lg"
                  placeholder="Ej: Horno 1, Mezcladora 2..." list="equipos-sugeridos">
                <datalist id="equipos-sugeridos">
                  <option value="Horno 1">
                  <option value="Horno 2">
                  <option value="Mezcladora 1">
                  <option value="Mezcladora 2">
                  <option value="Amasadora">
                  <option value="Túnel de enfriado">
                  <option value="Cortadora">
                  <option value="Empacadora">
                </datalist>
              </div>
            </div>
            <div class="col-12 col-md-6">
              <label class="form-label fw-semibold text-primary">Fecha de Instalación *</label>
              <input type="date" id="mantenimiento-fecha-instalacion" name="fechaInstalacion"
                class="form-control form-control-lg" required>
            </div>
          </div>

          <!-- Campos para Frecuencia por Horas -->
          <div class="row g-3 mb-3" id="campos-horas">
            <div class="col-12">
              <div class="alert alert-info mb-3">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Modo: Por Horas de Uso</strong> - El sistema calculará la fecha de vencimiento basándose en las horas de trabajo diarias.
              </div>
            </div>
            <div class="col-12 col-md-6">
              <label class="form-label fw-semibold text-primary">Horas de Vida Útil *</label>
              <input type="number" id="mantenimiento-horas" name="horasVidaUtil" min="0" step="1"
                class="form-control form-control-lg" placeholder="Ej: 500" required>
              <small class="text-muted">Total de horas que puede funcionar antes del cambio</small>
            </div>
            <div class="col-12 col-md-6">
              <label class="form-label fw-semibold text-primary">Horas de Trabajo Diarias *</label>
              <input type="number" id="mantenimiento-horas-diarias" name="horasDiarias" min="1" max="24" step="0.5"
                class="form-control form-control-lg" placeholder="Ej: 12" value="12" required>
              <small class="text-muted">Promedio de horas de uso por día</small>
            </div>
          </div>

          <!-- Campos para Frecuencia por Fecha -->
          <div class="row g-3 mb-3 d-none" id="campos-fecha">
            <div class="col-12">
              <div class="alert alert-warning mb-3">
                <i class="bi bi-calendar-event me-2"></i>
                <strong>Modo: Por Fecha Fija</strong> - El sistema calculará la fecha de vencimiento sumando días a la fecha de instalación.
              </div>
            </div>
            <div class="col-12 col-md-6">
              <label class="form-label fw-semibold text-primary">Intervalo de Cambio (Días) *</label>
              <input type="number" id="mantenimiento-intervalo" name="intervaloDias" min="1" step="1"
                class="form-control form-control-lg" placeholder="Ej: 30">
              <small class="text-muted">Cada cuántos días se debe realizar el mantenimiento</small>
            </div>
          </div>

          <div class="row g-3 mb-3">
            <div class="col-12">
              <div class="alert alert-info py-2">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <label class="form-label fw-semibold text-primary mb-0">Fecha de Próximo Cambio</label>
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="fecha-automatica" checked>
                    <label class="form-check-label small" for="fecha-automatica">
                      Cálculo Automático
                    </label>
                  </div>
                </div>
                <div id="calculo-mantenimiento" class="mb-2">
                  <small class="text-muted">Completa los datos para calcular el vencimiento.</small>
                </div>
                <input type="date" id="mantenimiento-fecha-vencimiento" name="fechaVencimiento"
                  class="form-control form-control-lg" readonly>
                <small class="text-muted d-block mt-1">Activa/desactiva "Cálculo Automático" para ingresar la fecha manualmente.</small>
              </div>
            </div>
          </div>

          <div class="row g-3 mb-3">
            <div class="col-12 col-md-6">
              <label class="form-label fw-semibold text-primary">Costo (Opcional)</label>
              <input type="number" id="mantenimiento-costo" name="costo" min="0" step="0.01"
                class="form-control form-control-lg" placeholder="0.00">
            </div>
          </div>

          <!-- Repuestos Utilizados -->
          <div class="row g-3 mb-3" id="seccion-repuestos" style="display: none;">
            <div class="col-12">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <label class="form-label fw-semibold text-primary mb-0">
                  <i class="bi bi-box-seam me-2"></i>Repuestos Utilizados
                </label>
                <button type="button" class="btn btn-sm btn-outline-primary" id="btn-agregar-repuesto-mantenimiento">
                  <i class="bi bi-plus-circle me-1"></i>Agregar Repuesto
                </button>
              </div>
              <div id="repuestos-mantenimiento-container" class="mb-3">
                <!-- Los repuestos se agregarán dinámicamente aquí -->
              </div>
            </div>
          </div>

          <div class="row g-3 mb-3">
            <div class="col-12">
              <label class="form-label fw-semibold text-primary">Observaciones</label>
              <textarea id="mantenimiento-observaciones" name="observaciones" class="form-control form-control-lg"
                rows="2" placeholder="Notas..."></textarea>
            </div>
          </div>

          <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-check-circle me-2"></i>Registrar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/mantenimientos.js"></script>