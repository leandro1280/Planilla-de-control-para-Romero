<header class="hero card border-0 shadow-lg text-white mb-4">
  <div class="card-body py-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
      <div>
        <h1 class="hero__title mb-2">
          <i class="bi bi-person-plus me-2"></i>Registrar Nuevo Usuario
        </h1>
        <p class="hero__subtitle mb-0">Crea un nuevo usuario para el sistema</p>
      </div>
      <a href="/auth/usuarios" class="btn btn-light btn-lg">
        <i class="bi bi-arrow-left me-2"></i>Volver a Usuarios
      </a>
    </div>
  </div>
</header>

<div class="card shadow-lg border-0">
  <div class="card-body p-4 p-md-5">
    <form id="registerForm" autocomplete="off">
      <div class="mb-3">
        <label for="nombre" class="form-label fw-semibold">Nombre</label>
        <input 
          type="text" 
          class="form-control form-control-lg" 
          id="nombre" 
          name="nombre" 
          required 
          autofocus
          placeholder="Nombre completo"
        >
      </div>
      
      <div class="mb-3">
        <label for="email" class="form-label fw-semibold">Email</label>
        <input 
          type="email" 
          class="form-control form-control-lg" 
          id="email" 
          name="email" 
          required 
          placeholder="tu@email.com"
        >
      </div>
      
      <div class="mb-3">
        <label for="password" class="form-label fw-semibold">Contraseña</label>
        <div class="input-group">
          <input 
            type="password" 
            class="form-control form-control-lg" 
            id="password" 
            name="password" 
            required
            placeholder="Mínimo 6 caracteres"
            minlength="6"
          >
          <button 
            class="btn btn-outline-secondary" 
            type="button" 
            id="togglePassword"
            title="Mostrar/Ocultar contraseña"
          >
            <i class="bi bi-eye" id="togglePasswordIcon"></i>
          </button>
        </div>
        <small class="form-text text-muted">Debe contener al menos una mayúscula, una minúscula y un número</small>
      </div>
      
      <div class="mb-3">
        <label for="confirmPassword" class="form-label fw-semibold">Confirmar Contraseña</label>
        <div class="input-group">
          <input 
            type="password" 
            class="form-control form-control-lg" 
            id="confirmPassword" 
            name="confirmPassword" 
            required
            placeholder="Repite la contraseña"
            minlength="6"
          >
          <button 
            class="btn btn-outline-secondary" 
            type="button" 
            id="toggleConfirmPassword"
            title="Mostrar/Ocultar contraseña"
          >
            <i class="bi bi-eye" id="toggleConfirmPasswordIcon"></i>
          </button>
        </div>
        <small class="form-text text-muted" id="passwordMatchMessage"></small>
      </div>
      
      <div class="mb-4">
        <label for="rol" class="form-label fw-semibold">Rol *</label>
        <select class="form-select form-select-lg" id="rol" name="rol" required>
          <option value="">Seleccione un rol</option>
          <option value="operario">Operario - Solo consulta y visualización</option>
          <option value="supervisor">Supervisor - Crear/editar productos y movimientos</option>
          <option value="administrador">Administrador - Acceso total</option>
        </select>
        <small class="form-text text-muted">
          El rol determina los permisos del usuario en el sistema
        </small>
      </div>
      
      <div id="register-result" class="mb-3 d-none"></div>
      
      <div class="d-grid gap-2 mt-4">
        <button type="submit" class="btn btn-primary btn-lg fw-semibold">
          <i class="bi bi-person-plus me-2"></i>Registrar Usuario
        </button>
        <a href="/auth/usuarios" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-2"></i>Cancelar
        </a>
      </div>
    </form>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const registerForm = document.getElementById('registerForm');
  const registerResult = document.getElementById('register-result');
  const passwordInput = document.getElementById('password');
  const confirmPasswordInput = document.getElementById('confirmPassword');
  const passwordMatchMessage = document.getElementById('passwordMatchMessage');
  const togglePasswordBtn = document.getElementById('togglePassword');
  const togglePasswordIcon = document.getElementById('togglePasswordIcon');
  const toggleConfirmPasswordBtn = document.getElementById('toggleConfirmPassword');
  const toggleConfirmPasswordIcon = document.getElementById('toggleConfirmPasswordIcon');
  
  if (!registerForm) {
    console.error('Formulario de registro no encontrado');
    return;
  }
  
  // Toggle mostrar/ocultar contraseña
  if (togglePasswordBtn) {
    togglePasswordBtn.addEventListener('click', function() {
      const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordInput.setAttribute('type', type);
      togglePasswordIcon.classList.toggle('bi-eye');
      togglePasswordIcon.classList.toggle('bi-eye-slash');
    });
  }
  
  // Toggle mostrar/ocultar confirmación de contraseña
  if (toggleConfirmPasswordBtn) {
    toggleConfirmPasswordBtn.addEventListener('click', function() {
      const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      confirmPasswordInput.setAttribute('type', type);
      toggleConfirmPasswordIcon.classList.toggle('bi-eye');
      toggleConfirmPasswordIcon.classList.toggle('bi-eye-slash');
    });
  }
  
  // Validar que las contraseñas coincidan en tiempo real
  function validatePasswordMatch() {
    const password = passwordInput.value;
    const confirmPassword = confirmPasswordInput.value;
    
    if (confirmPassword.length === 0) {
      passwordMatchMessage.textContent = '';
      confirmPasswordInput.classList.remove('is-invalid', 'is-valid');
      return true;
    }
    
    if (password === confirmPassword) {
      passwordMatchMessage.textContent = '✓ Las contraseñas coinciden';
      passwordMatchMessage.className = 'form-text text-success';
      confirmPasswordInput.classList.remove('is-invalid');
      confirmPasswordInput.classList.add('is-valid');
      return true;
    } else {
      passwordMatchMessage.textContent = '✗ Las contraseñas no coinciden';
      passwordMatchMessage.className = 'form-text text-danger';
      confirmPasswordInput.classList.remove('is-valid');
      confirmPasswordInput.classList.add('is-invalid');
      return false;
    }
  }
  
  // Validar formato de contraseña
  function validatePasswordFormat() {
    const password = passwordInput.value;
    const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)/;
    
    if (password.length === 0) {
      return true;
    }
    
    if (password.length < 6) {
      passwordInput.classList.remove('is-valid');
      passwordInput.classList.add('is-invalid');
      return false;
    }
    
    if (!passwordRegex.test(password)) {
      passwordInput.classList.remove('is-valid');
      passwordInput.classList.add('is-invalid');
      return false;
    }
    
    passwordInput.classList.remove('is-invalid');
    passwordInput.classList.add('is-valid');
    return true;
  }
  
  // Event listeners para validación en tiempo real
  passwordInput.addEventListener('input', function() {
    validatePasswordFormat();
    validatePasswordMatch();
  });
  
  confirmPasswordInput.addEventListener('input', function() {
    validatePasswordMatch();
  });
  
  registerForm.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const submitBtn = this.querySelector('button[type="submit"]');
    const originalBtnText = submitBtn.innerHTML;
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Registrando...';
    
    // Ocultar mensajes anteriores
    registerResult.className = 'mt-3 d-none';
    registerResult.innerHTML = '';
    
    // Validar formato de contraseña
    if (!validatePasswordFormat()) {
      registerResult.className = 'mt-3 alert alert-danger';
      registerResult.innerHTML = '<i class="bi bi-exclamation-triangle me-2"></i>La contraseña debe tener al menos 6 caracteres y contener una mayúscula, una minúscula y un número';
      registerResult.classList.remove('d-none');
      submitBtn.disabled = false;
      submitBtn.innerHTML = originalBtnText;
      return;
    }
    
    // Validar que las contraseñas coincidan
    if (!validatePasswordMatch()) {
      registerResult.className = 'mt-3 alert alert-danger';
      registerResult.innerHTML = '<i class="bi bi-exclamation-triangle me-2"></i>Las contraseñas no coinciden';
      registerResult.classList.remove('d-none');
      submitBtn.disabled = false;
      submitBtn.innerHTML = originalBtnText;
      return;
    }
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Validación básica
    if (!data.rol || data.rol === '') {
      registerResult.className = 'mt-3 alert alert-warning';
      registerResult.innerHTML = '<i class="bi bi-exclamation-triangle me-2"></i>Por favor seleccione un rol';
      registerResult.classList.remove('d-none');
      submitBtn.disabled = false;
      submitBtn.innerHTML = originalBtnText;
      return;
    }
    
    // Remover confirmPassword del objeto antes de enviar (no se envía al servidor)
    delete data.confirmPassword;
    
    try {
      const response = await fetch('/auth/register', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        credentials: 'same-origin', // Incluir cookies
        body: JSON.stringify(data)
      });
      
      const result = await response.json();
      
      if (result.success) {
        registerResult.className = 'mt-3 alert alert-success';
        registerResult.innerHTML = `
          <h6 class="alert-heading"><i class="bi bi-check-circle-fill me-2"></i>¡Usuario registrado correctamente!</h6>
          <p class="mb-0">El usuario <strong>${result.data.nombre}</strong> ha sido creado exitosamente.</p>
          <hr>
          <div class="alert alert-warning mb-0 mt-2">
            <i class="bi bi-exclamation-triangle-fill me-2"></i><strong>IMPORTANTE:</strong> 
            Recuerde informar al usuario su contraseña. Si la olvida, <strong>NO podrá recuperarla</strong>. 
            El usuario podrá cambiarla después de iniciar sesión.
          </div>
        `;
        registerResult.classList.remove('d-none');
        
        // Limpiar formulario
        this.reset();
        
        // Después de 5 segundos, redirigir a la lista de usuarios (más tiempo para leer el mensaje)
        setTimeout(() => {
          window.location.href = '/auth/usuarios';
        }, 5000);
      } else {
        const errorMsg = result.message || result.errors?.[0]?.msg || 'Error al registrar usuario';
        registerResult.className = 'mt-3 alert alert-danger';
        registerResult.innerHTML = `<i class="bi bi-exclamation-triangle-fill me-2"></i><strong>Error:</strong> ${errorMsg}`;
        registerResult.classList.remove('d-none');
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalBtnText;
      }
    } catch (error) {
      console.error('Error:', error);
      registerResult.className = 'mt-3 alert alert-danger';
      registerResult.innerHTML = '<i class="bi bi-exclamation-triangle-fill me-2"></i><strong>Error de conexión.</strong> Por favor intenta nuevamente.';
      registerResult.classList.remove('d-none');
      submitBtn.disabled = false;
      submitBtn.innerHTML = originalBtnText;
    }
  });
});
</script>

