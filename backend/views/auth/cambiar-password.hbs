<header class="hero card border-0 shadow-lg text-white mb-4">
  <div class="card-body py-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
      <div>
        <h1 class="hero__title mb-2">
          <i class="bi bi-key me-2"></i>Cambiar Contraseña
        </h1>
        <p class="hero__subtitle mb-0">Actualiza tu contraseña de acceso</p>
      </div>
      <a href="/auth/usuarios" class="btn btn-light btn-lg">
        <i class="bi bi-arrow-left me-2"></i>Volver
      </a>
    </div>
  </div>
</header>

<div class="card shadow-lg border-0">
  <div class="card-body p-4 p-md-5">
    <div class="alert alert-info mb-4">
      <i class="bi bi-info-circle-fill me-2"></i>
      <strong>Importante:</strong> Si olvidas tu contraseña, no podrás recuperarla. 
      Asegúrate de recordarla o anotarla en un lugar seguro.
    </div>

    <form id="cambiarPasswordForm" autocomplete="off">
      <div class="mb-3">
        <label for="passwordActual" class="form-label fw-semibold">Contraseña Actual</label>
        <input 
          type="password" 
          class="form-control form-control-lg" 
          id="passwordActual" 
          name="passwordActual" 
          required 
          autofocus
          placeholder="Ingresa tu contraseña actual"
        >
      </div>
      
      <div class="mb-3">
        <label for="nuevaPassword" class="form-label fw-semibold">Nueva Contraseña</label>
        <input 
          type="password" 
          class="form-control form-control-lg" 
          id="nuevaPassword" 
          name="nuevaPassword" 
          required
          placeholder="Mínimo 6 caracteres"
          minlength="6"
        >
        <small class="form-text text-muted">Debe contener al menos una mayúscula, una minúscula y un número</small>
      </div>
      
      <div class="mb-4">
        <label for="confirmarPassword" class="form-label fw-semibold">Confirmar Nueva Contraseña</label>
        <input 
          type="password" 
          class="form-control form-control-lg" 
          id="confirmarPassword" 
          name="confirmarPassword" 
          required
          placeholder="Repite la nueva contraseña"
          minlength="6"
        >
      </div>
      
      <div id="cambiar-password-result" class="mb-3 d-none"></div>
      
      <div class="d-grid gap-2 mt-4">
        <button type="submit" class="btn btn-primary btn-lg fw-semibold">
          <i class="bi bi-key-fill me-2"></i>Cambiar Contraseña
        </button>
        <a href="/auth/usuarios" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-2"></i>Cancelar
        </a>
      </div>
    </form>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const cambiarPasswordForm = document.getElementById('cambiarPasswordForm');
  const cambiarPasswordResult = document.getElementById('cambiar-password-result');
  const nuevaPassword = document.getElementById('nuevaPassword');
  const confirmarPassword = document.getElementById('confirmarPassword');
  
  if (!cambiarPasswordForm) {
    console.error('Formulario de cambio de contraseña no encontrado');
    return;
  }

  // Validar que las contraseñas coincidan en tiempo real
  function validarCoincidencia() {
    if (confirmarPassword.value && nuevaPassword.value !== confirmarPassword.value) {
      confirmarPassword.setCustomValidity('Las contraseñas no coinciden');
      confirmarPassword.classList.add('is-invalid');
    } else {
      confirmarPassword.setCustomValidity('');
      confirmarPassword.classList.remove('is-invalid');
    }
  }

  nuevaPassword.addEventListener('input', validarCoincidencia);
  confirmarPassword.addEventListener('input', validarCoincidencia);
  
  cambiarPasswordForm.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const submitBtn = this.querySelector('button[type="submit"]');
    const originalBtnText = submitBtn.innerHTML;
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Cambiando...';
    
    // Ocultar mensajes anteriores
    cambiarPasswordResult.className = 'mb-3 d-none';
    cambiarPasswordResult.innerHTML = '';
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Validación básica
    if (data.nuevaPassword !== data.confirmarPassword) {
      cambiarPasswordResult.className = 'mb-3 alert alert-warning';
      cambiarPasswordResult.innerHTML = '<i class="bi bi-exclamation-triangle me-2"></i>Las contraseñas nuevas no coinciden';
      cambiarPasswordResult.classList.remove('d-none');
      submitBtn.disabled = false;
      submitBtn.innerHTML = originalBtnText;
      return;
    }
    
    try {
      const response = await fetch('/auth/cambiar-password', {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        credentials: 'same-origin',
        body: JSON.stringify(data)
      });
      
      const result = await response.json();
      
      if (result.success) {
        cambiarPasswordResult.className = 'mb-3 alert alert-success';
        cambiarPasswordResult.innerHTML = `
          <h6 class="alert-heading"><i class="bi bi-check-circle-fill me-2"></i>¡Contraseña actualizada correctamente!</h6>
          <p class="mb-0">Tu contraseña ha sido cambiada exitosamente. Serás redirigido en unos segundos...</p>
        `;
        cambiarPasswordResult.classList.remove('d-none');
        
        // Limpiar formulario
        this.reset();
        
        // Después de 2 segundos, redirigir
        setTimeout(() => {
          window.location.href = '/auth/usuarios';
        }, 2000);
      } else {
        const errorMsg = result.message || result.errors?.[0]?.msg || 'Error al cambiar la contraseña';
        cambiarPasswordResult.className = 'mb-3 alert alert-danger';
        cambiarPasswordResult.innerHTML = `<i class="bi bi-exclamation-triangle-fill me-2"></i><strong>Error:</strong> ${errorMsg}`;
        cambiarPasswordResult.classList.remove('d-none');
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalBtnText;
      }
    } catch (error) {
      console.error('Error:', error);
      cambiarPasswordResult.className = 'mb-3 alert alert-danger';
      cambiarPasswordResult.innerHTML = '<i class="bi bi-exclamation-triangle-fill me-2"></i><strong>Error de conexión.</strong> Por favor intenta nuevamente.';
      cambiarPasswordResult.classList.remove('d-none');
      submitBtn.disabled = false;
      submitBtn.innerHTML = originalBtnText;
    }
  });
});
</script>

