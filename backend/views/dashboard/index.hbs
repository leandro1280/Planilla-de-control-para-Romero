<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Gráfico de comparativa mensual
    {{#if estadisticasMensuales}}
    document.addEventListener('DOMContentLoaded', function() {
        const ctxComparativa = document.getElementById('graficoComparativaMensual');
        if (ctxComparativa) {
            const mesesData = JSON.parse(ctxComparativa.dataset.meses);
            const meses = mesesData.map(m => m.mes);
            const ingresos = mesesData.map(m => m.ingresos);
            const egresos = mesesData.map(m => m.egresos);
            
            new Chart(ctxComparativa, {
                type: 'line',
                data: {
                    labels: meses,
                    datasets: [{
                        label: 'Ingresos',
                        data: ingresos,
                        borderColor: '#28a745',
                        backgroundColor: 'rgba(40, 167, 69, 0.1)',
                        tension: 0.4,
                        fill: true
                    }, {
                        label: 'Egresos',
                        data: egresos,
                        borderColor: '#dc3545',
                        backgroundColor: 'rgba(220, 53, 69, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Tendencia de Movimientos por Mes',
                            font: { size: 16 }
                        },
                        legend: {
                            position: 'top'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        // Cargar predicciones de stock
        fetch('/api/estadisticas/prediccion-stock?dias=30')
            .then(res => res.json())
            .then(data => {
                const container = document.getElementById('prediccionesContainer');
                if (data.success && data.data.predicciones.length > 0) {
                    const criticos = data.data.predicciones.filter(p => p.urgencia === 'critica').length;
                    const altos = data.data.predicciones.filter(p => p.urgencia === 'alta').length;
                    
                    container.innerHTML = `
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="card border-danger">
                                    <div class="card-body text-center">
                                        <h3 class="text-danger">${criticos}</h3>
                                        <p class="mb-0">Urgencia Crítica</p>
                                        <small class="text-muted">Se agotarán en menos de 7 días</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-warning">
                                    <div class="card-body text-center">
                                        <h3 class="text-warning">${altos}</h3>
                                        <p class="mb-0">Urgencia Alta</p>
                                        <small class="text-muted">Se agotarán en menos de 30 días</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-info">
                                    <div class="card-body text-center">
                                        <h3 class="text-info">${data.data.predicciones.length}</h3>
                                        <p class="mb-0">Total Analizados</p>
                                        <a href="/api/estadisticas/prediccion-stock?dias=30" class="btn btn-sm btn-primary mt-2" target="_blank">Ver Detalles</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                } else {
                    container.innerHTML = '<p class="text-muted">No hay datos suficientes para predicciones</p>';
                }
            })
            .catch(error => {
                console.error('Error cargando predicciones:', error);
                document.getElementById('prediccionesContainer').innerHTML = '<p class="text-danger">Error al cargar predicciones</p>';
            });
    });
    {{/if}}
</script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const ctx = document.getElementById('productosChart');
        if (ctx) {
            // Leer datos del atributo data-stats (seguro y limpio)
            let tiposData = {};
            try {
                tiposData = JSON.parse(ctx.dataset.stats || '{}');
            } catch (e) {
                console.error('Error parseando datos del gráfico:', e);
            }

            const labels = Object.keys(tiposData);
            const data = Object.values(tiposData);

            // Colores para el gráfico
            const backgroundColors = [
                '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
                '#858796', '#5a5c69', '#f8f9fc', '#4e73df', '#1cc88a'
            ];

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: backgroundColors,
                        hoverBackgroundColor: backgroundColors,
                        hoverBorderColor: "rgba(234, 236, 244, 1)",
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                font: {
                                    family: "'Nunito', sans-serif",
                                    size: 12
                                },
                                usePointStyle: true
                            }
                        }
                    },
                    layout: {
                        padding: {
                            left: 10,
                            right: 10,
                            top: 10,
                            bottom: 10
                        }
                    }
                }
            });
        }
    });
</script>